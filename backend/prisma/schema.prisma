generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  firebaseUid  String   @unique @map("firebase_uid")
  nickname     String
  profileEmoji String?  @map("profile_emoji")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  createdProjects Project[]       @relation("ProjectCreator")
  projectMembers  ProjectMember[]
  checklists      Checklist[]     @relation("ChecklistAssignee")
  timeLogs        TimeLog[]
  studySessions   StudySession[]

  @@map("users")
}

model Location {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")

  studySessions StudySession[]

  @@map("locations")
}

model Project {
  id               String    @id @default(uuid())
  title            String
  coverImageUrl    String?   @map("cover_image_url")
  plannedStartDate DateTime? @map("planned_start_date") @db.Date
  plannedEndDate   DateTime? @map("planned_end_date") @db.Date
  createdBy        String    @map("created_by")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  rating           Int?      @db.SmallInt

  creator    User            @relation("ProjectCreator", fields: [createdBy], references: [id])
  members    ProjectMember[]
  checklists Checklist[]

  @@map("projects")
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  role      String   @default("member")
  joinedAt  DateTime @default(now()) @map("joined_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model Checklist {
  id           String   @id @default(uuid())
  projectId    String   @map("project_id")
  content      String
  isCompleted  Boolean  @default(false) @map("is_completed")
  assigneeId   String?  @map("assignee_id")
  displayOrder Int      @default(0) @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee User?     @relation("ChecklistAssignee", fields: [assigneeId], references: [id])
  timeLogs TimeLog[]

  @@map("checklists")
}

model TimeLog {
  id          String    @id @default(uuid())
  checklistId String    @map("checklist_id")
  userId      String    @map("user_id")
  startedAt   DateTime  @map("started_at")
  endedAt     DateTime? @map("ended_at")

  checklist Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@map("time_logs")
}

model StudySession {
  id         String    @id @default(uuid())
  userId     String    @map("user_id")
  locationId String    @map("location_id")
  socketId   String?   @map("socket_id")
  joinedAt   DateTime  @default(now()) @map("joined_at")
  leftAt     DateTime? @map("left_at")

  user     User     @relation(fields: [userId], references: [id])
  location Location @relation(fields: [locationId], references: [id])

  @@map("study_sessions")
}
